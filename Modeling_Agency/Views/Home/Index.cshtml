                    <div class="text-center">
                        <div class="fs-1 fw-bold text-primary">12+</div>
                        <div>Years Experience</div>
                    </div>
                    <div class="text-center">
                        <div class="fs-1 fw-bold text-primary">500+</div>
                        <div>Models</div>
                    </div>
                    <div class="text-center">
                        <div class="fs-1 fw-bold text-primary">1000+</div>
                        <div>Projects</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1529139574466-a303027c1d8b" alt="Modeling Agency" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Our Services</h2>
