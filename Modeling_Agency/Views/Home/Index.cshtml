<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h2 class="display-5 fw-bold mb-4">Get In Touch</h2>
                <p class="lead">Ready to find the perfect talent for your project or start your modeling career?</p>
                <div class="mt-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-map-marker-alt me-3 fs-4 text-primary"></i>
                        <div>UET KSK Campus, Lahore, Pakistan</div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-phone me-3 fs-4 text-primary"></i>
                        <div>+92 300 1234567</div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-envelope me-3 fs-4 text-primary"></i>
                        <div>info@cinexcs.com</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="h4 mb-4">Send Us a Message</h3>
                        <form>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Your Name">
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Your Email">
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>